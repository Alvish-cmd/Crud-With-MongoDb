<%- include('./include/_header.ejs') %>
<main id="site-main">
    <div class="container">
        <div class="box-nav d-flex-justify-between">
            <div class="filter">
                <a href="/"><i class="fas fa-angle-double-left"></i>All Users</a>
            </div>
        </div>
        <div class="form-button text-center">
            <h2 class="text-dark">New user</h2>
            <span class="text-light">User the below form to create a new account</span>
        </div>

<form action="/adduser" method="POST" id="add_user"  enctype="multipart/form-data">
    <div class="new_user">
      <div class="form-group">
        <label for="name" class="text-light">Name</label>
        <input type="hidden" name="id" value="" />
        <input type="text" name="name" id="txtfirstname" value="" placeholder="Alvish" />
      </div>
      <div class="form-group">
        <label for="Email" class="text-light">Email</label>
        <input id="txtemail"
          type="text"
          name="email"
          value=""
          placeholder="example@gmail.com"
        />

      </div>
      <div class="form-group">
        <label for="Phone" class="text-light">Number</label>
        <input
        id="txtphonenumber"
          type="number"
          name="number"
          value=""
        />
      
      </div>
      
      <div class="form-group">
        <label for="Dob" class="text-light">Date of Birth</label>
        <input
        id="txtdob"
          type="date"
          name="Dob"
          value=""
        />
    
      </div>
      <div class="form-group">
        <label for="Password" class="text-light">Password</label>
        <input
        id="txtpassword"
          type="password"
          name="password"
          value=""
        />
       
      </div>
      <div class="form-group">
        <label for="confirm Password" class="text-light">Confirm Password</label>
        <input
          type="password"
          name="Cpassword"
          value=""
        />
       
      </div>
      <div class="form-group">
        <label for="Country" class="text-light">country</label>
        <select id="country" name="country" class="form-control">
          <option value="India">India</option>
          <option value="Usa">Usa</option>
          <option value="Russia">Russia</option>
          </select>
          
      </div>
      <div class="form-group">
        <label for="address" class="text-light">Address</label>
        <input
          type="text"
          name="address"
          value=""
        />
        
      </div>
      <div class="form-group">
        <label for="file" class="text-light">Upload a Img</label>
        <input type="file" class="form-control" name="image" id="image">
      </div>
      <!-- <div class="form-group">
        <label for="file" class="text-light">Upload a file</label>
        <input type="file" accept=".pdf,.doc/*" id="myFile" name="myFile">
      </div> -->
      <div class="form-group">
        <button type="submit" class="btn text-dark update">Save</button>
    </div>
    </div>
  </form>

<%- include('./include/_footer.ejs') %>